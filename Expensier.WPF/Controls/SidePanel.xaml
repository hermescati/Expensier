<UserControl x:Class="Expensier.WPF.Controls.SidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Expensier.WPF.Controls"
             
             xmlns:vm="clr-namespace:Expensier.WPF.ViewModels"
             xmlns:converters="clr-namespace:Expensier.WPF.Converters"
             xmlns:navigator="clr-namespace:Expensier.WPF.State.Navigators"
             
             mc:Ignorable="d" 
             d:DesignHeight="852" d:DesignWidth="224">

    <UserControl.Resources>

        <converters:EqualValueToParameterConverter x:Key="EqualValueToParameterConverter"/>

        <Style x:Key="SidePanelButton" TargetType="{x:Type RadioButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource InactiveColor}"/>
            <Setter Property="FontFamily" Value="SF Pro Display"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="143"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Margin" Value="0, 0, 0, 40"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image
                                x:Name="Icon"
                                Width="24"
                                Height="24"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="{TemplateBinding UseLayoutRounding}"
                                Source="{Binding Tag[0], RelativeSource={RelativeSource TemplatedParent}}"/>
                            <ContentPresenter 
                                x:Name="Content" 
                                Grid.Column="1"
                                Margin="16, 0, 0, 0"
                                VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
                                <Setter Property="Source" TargetName="Icon" Value="{Binding Tag[1], RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border 
        Width="Auto"
        Height="Auto" 
        Padding="40, 52, 40, 52" 
        CornerRadius="25"
        Background="{StaticResource PrimaryColor}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0">
                <Ellipse Height="100" Width="100">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Styles/Images/default_profile_picture.png"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Label
                    Margin="0, 16, 0, 0"
                    HorizontalContentAlignment="Center"
                    Style="{StaticResource SubHeading}"
                    Content="Hi User"/>
            </StackPanel>
            <StackPanel 
                Grid.Row="2"
                HorizontalAlignment="Left">
                <RadioButton
                    Content="Dashboard"
                    Style="{DynamicResource SidePanelButton}"
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static navigator:ViewType.Dashboard}"
                    IsChecked="{
                        Binding Navigator.CurrentViewModel,
                        Mode=OneWay,
                        Converter={StaticResource EqualValueToParameterConverter},
                        ConverterParameter={x:Type vm:DashboardViewModel}}">
                    <RadioButton.Tag>
                        <x:Array Type="DrawingImage">
                            <DrawingImage Drawing="{StaticResource Dashboard}"/>
                            <DrawingImage Drawing="{StaticResource DashboardSelected}"/>
                        </x:Array>
                    </RadioButton.Tag>
                </RadioButton>
                <RadioButton
                    Content="Expenses"
                    Style="{DynamicResource SidePanelButton}"
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static navigator:ViewType.Expenses}"
                    IsChecked="{
                        Binding Navigator.CurrentViewModel,
                        Mode=OneWay,
                        Converter={StaticResource EqualValueToParameterConverter},
                        ConverterParameter={x:Type vm:ExpensesViewModel}}">
                    <RadioButton.Tag>
                        <x:Array Type="DrawingImage">
                            <DrawingImage Drawing="{StaticResource Expenses}"/>
                            <DrawingImage Drawing="{StaticResource ExpensesSelected}"/>
                        </x:Array>
                    </RadioButton.Tag>
                </RadioButton>
                <RadioButton
                    Content="Wallet"
                    Style="{DynamicResource SidePanelButton}"
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static navigator:ViewType.Wallet}"
                    IsChecked="{
                        Binding Navigator.CurrentViewModel,
                        Mode=OneWay,
                        Converter={StaticResource EqualValueToParameterConverter},
                        ConverterParameter={x:Type vm:WalletViewModel}}">
                    <RadioButton.Tag>
                        <x:Array Type="DrawingImage">
                            <DrawingImage Drawing="{StaticResource Wallet}"/>
                            <DrawingImage Drawing="{StaticResource WalletSelected}"/>
                        </x:Array>
                    </RadioButton.Tag>
                </RadioButton>
                <Border 
                    BorderThickness="1"
                    CornerRadius="0.5"
                    BorderBrush="{StaticResource InactiveColor}"/>
                <RadioButton
                    Margin="0, 40, 0, 40"
                    Content="Settings"
                    Style="{DynamicResource SidePanelButton}">
                    <RadioButton.Tag>
                        <x:Array Type="DrawingImage">
                            <DrawingImage Drawing="{StaticResource Settings}"/>
                            <DrawingImage Drawing="{StaticResource SettingsSelected}"/>
                        </x:Array>
                    </RadioButton.Tag>
                </RadioButton>
                <RadioButton 
                    Content="Support"
                    Style="{DynamicResource SidePanelButton}">
                    <RadioButton.Tag>
                        <x:Array Type="DrawingImage">
                            <DrawingImage Drawing="{StaticResource Support}"/>
                            <DrawingImage Drawing="{StaticResource SupportSelected}"/>
                        </x:Array>
                    </RadioButton.Tag>
                </RadioButton>
            </StackPanel>
            <Button 
                Grid.Row="4"
                Width="144"
                Height="40"
                Style="{DynamicResource ImagedButton}"
                Tag="{StaticResource LogoutIcon}"
                Content="Log out">
            </Button>
        </Grid>
    </Border>
</UserControl>
