<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Colors-->
    <Color x:Key="Background">#000000</Color>
    <Color x:Key="Foreground">#FFFFFF</Color>
    <Color x:Key="Dominant">#1B191B</Color>
    <Color x:Key="Secondary">#64927C</Color>
    <Color x:Key="Accent">#D94E33</Color>
    
    
    <!--Color Palette-->
    <SolidColorBrush x:Key="BackgroundColor" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="ForegroundColor" Color="{StaticResource Foreground}"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource Dominant}"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="AccentColor" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="InactiveColor" Color="{StaticResource Foreground}" Opacity="0.4"/>
    <SolidColorBrush x:Key="TransparentColor" Color="{StaticResource Foreground}" Opacity="0.15"/>
    
    <SolidColorBrush x:Key="SecondaryGlowColor" Color="{StaticResource Secondary}" Opacity="0.3"/>
    
    <LinearGradientBrush x:Key="BackgroundGradientColor" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{StaticResource Background}" Offset="0"/>
        <GradientStop Color="#4D000000" Offset="1"/>
    </LinearGradientBrush>
    
    
    <!--TextBox-->
    <Style x:Key="TextBoxTemplate" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource InactiveColor}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Padding" Value="32, 12, 32, 12"/>
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border 
                        x:Name="GlowEffect"
                        Margin="-4"
                        BorderThickness="0"
                        CornerRadius="13"
                        BorderBrush="{StaticResource SecondaryGlowColor}">
                        <Border
                            x:Name="Border"
                            CornerRadius="10"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{StaticResource PrimaryColor}"
                            BorderBrush="{StaticResource InactiveColor}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                            <ScrollViewer 
                                x:Name="PART_ContentHost"
                                Padding="0"
                                Focusable="false"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ForegroundColor}"/>
                            <Setter Property="BorderBrush" TargetName="Border" Value="{StaticResource SecondaryColor}"/>
                            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="{StaticResource ForegroundColor}"/>
                            <Setter Property="BorderBrush" TargetName="Border" Value="{StaticResource SecondaryColor}"/>
                            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
                            <Setter Property="BorderThickness" TargetName="GlowEffect" Value="4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


