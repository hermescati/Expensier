<UserControl
    x:Class="Expensier.WPF.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:subscriptions="clr-namespace:Expensier.WPF.Controls.Subscriptions"
    xmlns:transactions="clr-namespace:Expensier.WPF.Controls.Transactions"
    d:DesignHeight="852"
    d:DesignWidth="1304"
    mc:Ignorable="d">

    <Border
        Width="Auto"
        Height="Auto"
        Padding="52"
        Background="{StaticResource PrimaryColor}"
        CornerRadius="24">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="122" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--#region Spending Summary-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            Content="Spending summary"
                            Style="{StaticResource Header_20px}" />

                        <ComboBox
                            Grid.Column="2"
                            Width="137"
                            Height="32">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource DropDownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="this week" IsSelected="True" />
                            <ComboBoxItem Content="this month" />
                            <ComboBoxItem Content="this year" />
                        </ComboBox>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Summary Graph-->
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

                <!--#region Expenditure-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            Content="Expenditure"
                            Style="{StaticResource Header_20px}" />

                        <ComboBox
                            Grid.Column="2"
                            Width="137"
                            Height="32">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource DropDownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="this week" IsSelected="True" />
                            <ComboBoxItem Content="this month" />
                            <ComboBoxItem Content="this year" />
                        </ComboBox>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Expenditure Graph-->
                    <Rectangle
                        Grid.Row="2"
                        Width="500"
                        Height="224"
                        Fill="{StaticResource InactiveColor}" />
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--#region Expenses-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Label
                        Grid.Row="0"
                        Content="Recent expenses"
                        Style="{StaticResource Header_20px}" />
                    <!--#endregion-->

                    <!--#region Top Expenses-->
                    <transactions:RecentExpenses
                        Grid.Row="2"
                        Width="342"
                        Height="308"
                        DataContext="{Binding RecentExpensesViewModel}" />
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="64" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Subscriptions-->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--#region Header-->
                        <Label
                            Grid.Row="0"
                            Content="Subscriptions"
                            Style="{StaticResource Header_20px}" />
                        <!--#endregion-->

                        <!--#region Top Subscriptions-->
                        <subscriptions:TopSubscriptions
                            Grid.Row="2"
                            Width="774"
                            Height="42"
                            DataContext="{Binding TopSubscriptionsViewModel}" />
                        <!--#endregion-->

                    </Grid>
                    <!--#endregion-->

                    <!--#region Watchlist-->
                    <Border
                        Grid.Row="2"
                        Width="774"
                        Height="204"
                        Padding="48,27,48,27"
                        Background="{StaticResource BackgroundGradientColor}"
                        CornerRadius="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--#region Header-->
                            <StackPanel Grid.Column="0" Width="110">
                                <Label
                                    Margin="0,20,0,16"
                                    Content="Watchlist"
                                    Style="{StaticResource Header_20px}" />
                                <TextBlock
                                    Margin="0,0,0,16"
                                    Style="{StaticResource Text_14px}"
                                    Text="Keep track of your favorite cryptos"
                                    TextWrapping="Wrap" />
                                <Button
                                    Width="110"
                                    Height="28"
                                    Content="See all"
                                    Style="{StaticResource SmallButton}" />
                            </StackPanel>
                            <!--#endregion-->

                            <!--#region Crypto Cards-->
                            <!--#endregion-->

                        </Grid>

                    </Border>
                    <!--#endregion-->

                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
