<UserControl x:Class="Expensier.WPF.Views.ExpensesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Expensier.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="852" d:DesignWidth="1304">

    <Border
        Width="Auto"
        Height="Auto" 
        Padding="52" 
        CornerRadius="24"
        Background="{StaticResource PrimaryColor}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label
                    Style="{StaticResource Heading}"
                    Content="Expenses"/>
                <Grid Margin="0, 16, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button 
                        Grid.Column="0"
                        Width="98"
                        Height="32"
                        Content="Add New"/>
                    <Calendar 
                        Grid.Column="2"
                        Height="32" Grid.ColumnSpan="2" Margin="0,0,227,0"/>
                    <Button
                        Grid.Column="4"
                        Width="190"
                        Height="32"
                        Content="Search Bar"/>
                    <Button
                        Grid.Column="6"
                        Width="32"
                        Height="32"/>
                </Grid>
                <Rectangle
                    Width="735"
                    Height="564"
                    Margin="0, 38, 0, 38"
                    Fill="{StaticResource InactiveColor}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource NormalText}"
                        Content="Showing x of y entries"/>
                    <Rectangle
                        Grid.Column="2"
                        Width="144"
                        Height="24"
                        Fill="{StaticResource InactiveColor}"/>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Label
                    Style="{StaticResource Heading}"
                    Content="Subscriptions"/>
                <Grid Margin="0, 16, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button 
                        Grid.Column="0"
                        Width="98"
                        Height="32"
                        Content="Add New"/>
                    <Button 
                        Grid.Column="2"
                        Width="101"
                        Height="32"
                        Content="Sort by"/>
                </Grid>
                <Rectangle
                    Width="381"
                    Height="340"
                    Margin="0, 38, 0, 56"
                    Fill="{StaticResource InactiveColor}"/>
                <Rectangle
                    Width="381"
                    Height="230"
                    Fill="{StaticResource InactiveColor}"/>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>
