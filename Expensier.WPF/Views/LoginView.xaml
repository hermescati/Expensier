<UserControl x:Class="Expensier.WPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Expensier.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="852" d:DesignWidth="1552">
    <Border
        Width="Auto"
        Height="Auto" 
        Padding="52" 
        CornerRadius="24"
        Background="{StaticResource PrimaryColor}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel 
                Grid.Column="1"
                VerticalAlignment="Center">

                <!--#region Login Form-->
                <StackPanel
                    Width="351">
                    <StackPanel 
                        Orientation="Horizontal"
                        Margin="0, 0, 0, 40">
                        <Rectangle
                            Width="60"
                            Height="60"
                            Fill="Gray"
                            HorizontalAlignment="Left"/>
                        <WrapPanel 
                            Orientation="Vertical"
                            Margin="16, 0">
                            <Label
                                Margin="0, 0, 0, 10"
                                Style="{StaticResource BigHeading}"
                                Content="Welcome to Expensier"/>
                            <Label
                                Style="{StaticResource SubHeading2-Medium}"
                                Content="Log in to sync your account"/>
                        </WrapPanel>
                    </StackPanel>
                    <WrapPanel 
                        Orientation="Vertical"
                        Width="Auto"
                        Margin="0, 0, 0, 24">
                        <Label
                            Style="{StaticResource SubHeading}"
                            Foreground="{StaticResource ForegroundColor}" 
                            Content="Email"/>
                        <TextBox
                            Width="351"
                            Height="45"
                            Margin="0, 4, 0, 0"
                            Style="{StaticResource TextBoxTemplate}"
                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </WrapPanel>
                    <WrapPanel 
                        Orientation="Vertical"
                        Margin="0, 0, 0, 16">
                        <Label 
                            Style="{StaticResource SubHeading}" 
                            Foreground="{StaticResource ForegroundColor}" 
                            Content="Password"/>
                        <PasswordBox 
                            x:Name="PasswordBox"
                            Width="351"
                            Height="45"
                            Margin="0, 4, 0, 0"
                            Style="{StaticResource PasswordBoxTemplate}"/>
                    </WrapPanel>
                    <Label
                        Style="{StaticResource NormalText}"
                        Content="Fogot password?"/>
                    <Button 
                        Margin="0, 40, 0, 0"
                        Width="351"
                        Height="45"
                        Style="{StaticResource ImagedButton}"
                        IsDefault="True"
                        Tag="{StaticResource LoginIcon}"
                        Content ="Login" 
                        Click="Button_Click"/>
                </StackPanel>
                <!--#endregion-->

                <!--#region Privacy Terms-->
                <StackPanel
                    Margin="0, 120, 0, 0"
                    Width="525"
                    Height="99">
                    <TextBlock 
                        Style="{StaticResource NormalText-TextBlock}"
                        TextAlignment="Center">
                        <Run Text="By clicking &quot;Continue with Google / Facebook&quot; above, you acknowledge that you have"></Run> 
                        <LineBreak/>
                        <Run Text="read and understood, and agree to Expensier's"></Run> 
                        <Hyperlink Foreground="{StaticResource InactiveColor}">Terms &amp; Conditions</Hyperlink>
                        <Run Text="and"/>
                        <Hyperlink Foreground="{StaticResource InactiveColor}">Privacy Policy.</Hyperlink>
                    </TextBlock>
                    <StackPanel
                        Width="341"
                        Height="17"
                        Margin="0, 48, 0, 0"
                        Orientation="Horizontal">
                        <Label
                            Style="{StaticResource NormalText}">
                            <Label.Content>Need help?</Label.Content>
                        </Label>
                        <Label
                            Margin="32, 0, 0, 0"
                            Style="{StaticResource NormalText}">
                            <Label.Content>Privacy &amp; Terms</Label.Content>
                        </Label>
                        <Label
                            Margin="32, 0, 0, 0"
                            Style="{StaticResource NormalText}">
                            <Label.Content>© 2023 Expensier</Label.Content>
                        </Label>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <!--#endregion-->

            <!--#region Signup-->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel 
                    Grid.Column="2"
                    Margin="138, 64, 134, 0">
                    <Label
                        Style="{StaticResource SubHeading2}"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left"
                        Content="Not a member?"/>
                    <Button
                        Margin="24, 0, 0, 0"
                        Width="112"
                        Height="35"
                        Style="{StaticResource Button}"
                        Content="Sign up">
                    </Button>
                </DockPanel>
            </Grid>
            <!--#endregion-->
        </Grid>
    </Border>
</UserControl>
