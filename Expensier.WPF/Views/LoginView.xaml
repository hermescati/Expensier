<UserControl x:Class="Expensier.WPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Expensier.WPF.Views" xmlns:components="clr-namespace:PasswordBoxMVVM.Components;assembly=PasswordBoxMVVM"
             mc:Ignorable="d" 
             d:DesignHeight="852" d:DesignWidth="1552">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Border
        Width="Auto"
        Height="Auto" 
        Padding="52" 
        CornerRadius="24"
        Background="{StaticResource PrimaryColor}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel 
                Grid.Column="1"
                VerticalAlignment="Bottom">

                <!--#region Login Form-->
                <StackPanel
                    Width="351">
                    <StackPanel 
                        Orientation="Horizontal"
                        Margin="0, 0, 0, 40">
                        <Image
                            Width="60"
                            Height="60"
                            HorizontalAlignment="Left"
                            Source="{StaticResource AppIcon}"/>
                        <WrapPanel 
                            Orientation="Vertical"
                            Margin="16, 0">
                            <Label
                                Margin="0, 0, 0, 10"
                                Style="{StaticResource Header_24px}"
                                Content="Welcome to Expensier"/>
                            <Label
                                Style="{StaticResource Text_15px}"
                                Content="Log in to sync your account"/>
                        </WrapPanel>
                    </StackPanel>
                    <WrapPanel 
                        Orientation="Vertical"
                        Margin="0, 0, 0, 24">
                        <Label
                            Style="{StaticResource Subheader_16px}"
                            Content="Email"/>
                        <TextBox
                            x:Name="EmailAddress"
                            Width="351"
                            Height="45"
                            Margin="0, 4, 0, 0"
                            Style="{StaticResource TextBoxTemplate}"
                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </WrapPanel>
                    <WrapPanel 
                        Orientation="Vertical"
                        Margin="0, 0, 0, 16">
                        <Label 
                            Style="{StaticResource Subheader_16px}" 
                            Content="Password"/>
                        <components:BindablePasswordBox 
                            Width="351"
                            Height="45"
                            Margin="0, 4, 0, 0"
                            Password="{Binding Password}"/>
                    </WrapPanel>
                    <TextBlock
                        Style="{StaticResource Text_14px}"
                        Text="Fogot password?"/>
                    <Button
                        x:Name="LoginButton"
                        Margin="0, 40, 0, 0"
                        Width="351"
                        Height="45"
                        Style="{StaticResource ImagedButton}"
                        IsDefault="True"
                        Tag="{StaticResource LoginIcon}"
                        Content ="Login"
                        Command="{Binding LoginCommand}"/>
                    <TextBlock
                        Margin="0, 16, 0, 0"
                        DataContext="{Binding ErrorMessageViewModel}"
                        Text="{Binding Message}"
                        Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Foreground="{StaticResource AccentColor}"/>
                </StackPanel>
                <!--#endregion-->

                <!--#region Privacy Terms-->
                <StackPanel
                    Margin="0, 120, 0, 0"
                    Width="525"
                    Height="99">
                    <TextBlock 
                        Style="{StaticResource Text_14px}"
                        TextAlignment="Center">
                        <Run Text="By clicking &quot;Continue with Google / Facebook&quot; above, you acknowledge that you have"></Run> 
                        <LineBreak/>
                        <Run Text="read and understood, and agree to Expensier's"></Run> 
                        <Hyperlink Foreground="{StaticResource InactiveColor}">Terms &amp; Conditions</Hyperlink>
                        <Run Text="and"/>
                        <Hyperlink Foreground="{StaticResource InactiveColor}">Privacy Policy.</Hyperlink>
                    </TextBlock>
                    <StackPanel
                        Width="341"
                        Height="17"
                        Margin="0, 48, 0, 0"
                        Orientation="Horizontal">
                        <TextBlock
                            Style="{StaticResource Text_14px}"
                            Text="Need help?"/>
                        <TextBlock
                            Margin="32, 0, 0, 0"
                            Style="{StaticResource Text_14px}"
                            Text="Privacy &amp; Terms"/>
                        <TextBlock
                            Margin="32, 0, 0, 0"
                            Style="{StaticResource Text_14px}"
                            Text="© 2023 Expensier"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <!--#endregion-->

            <!--#region Signup-->
            <StackPanel
                Grid.Column="2"
                Width="240"
                Height="35"
                Margin="0, 151"
                Orientation="Horizontal"
                VerticalAlignment="Top">
                <Label
                    Style="{StaticResource Subheader_15px}"
                    VerticalContentAlignment="Center"
                    Content="Not a member?"/>
                <Button
                    Margin="24, 0, 0, 0"
                    Width="112"
                    Height="35"
                    Style="{StaticResource Button}"
                    Content="Sign up"
                    Command="{Binding ViewRegisterCommand}"/>
            </StackPanel>
            <!--#endregion-->
        </Grid>
    </Border>
</UserControl>
