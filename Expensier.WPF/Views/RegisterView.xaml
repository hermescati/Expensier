<UserControl x:Class="Expensier.WPF.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Expensier.WPF.Views" xmlns:components="clr-namespace:PasswordBoxMVVM.Components;assembly=PasswordBoxMVVM"
             mc:Ignorable="d" 
             d:DesignHeight="852" d:DesignWidth="1552">

    <Border
        Width="Auto"
        Height="Auto" 
        Padding="52" 
        CornerRadius="24"
        Background="{StaticResource PrimaryColor}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel 
                Grid.Column="1"
                VerticalAlignment="Center">

                <!--#region Register Form-->
                <StackPanel Width="351">
                    <WrapPanel 
                        Orientation="Vertical"
                        Margin="0, 0, 0, 48">
                        <Label
                            Margin="0, 0, 0, 10"
                            Style="{StaticResource Header_24px}"
                            Content="Sign up with your email"/>
                        <Label
                            Padding="0"
                            VerticalContentAlignment="Center">
                            <TextBlock 
                                Style="{StaticResource Subheader_15px_Regular}"
                                TextWrapping="WrapWithOverflow">
                                <Run Text="Already have an account?"/>
                                <Hyperlink 
                                    Style="{StaticResource Hyperlink_15px}"
                                    Command="{Binding ViewLoginCommand}">
                                    Log in
                                </Hyperlink>
                            </TextBlock>
                        </Label>
                    </WrapPanel>
                    <Grid Margin="0, 0, 0, 24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <WrapPanel 
                            Grid.Column="0"
                            Orientation="Vertical">
                            <Label
                                Style="{StaticResource Subheader_16px}"
                                Foreground="{StaticResource ForegroundColor}" 
                                Content="First Name"/>
                            <TextBox
                                Width="165"
                                Height="45"
                                Margin="0, 4, 0, 0"
                                Style="{StaticResource TextBoxTemplate}"
                                Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                        </WrapPanel>
                        <WrapPanel 
                            Grid.Column="2"
                            Orientation="Vertical">
                            <Label
                                Style="{StaticResource Subheader_16px}"
                                Foreground="{StaticResource ForegroundColor}" 
                                Content="Last Name"/>
                            <TextBox
                                Width="165"
                                Height="45"
                                Margin="0, 4, 0, 0"
                                Style="{StaticResource TextBoxTemplate}"
                                Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                        </WrapPanel>
                    </Grid>
                    <WrapPanel 
                        Orientation="Vertical"
                        Margin="0, 0, 0, 24">
                        <Label
                            Style="{StaticResource Subheader_16px}"
                            Foreground="{StaticResource ForegroundColor}" 
                            Content="Email"/>
                        <TextBox
                            Width="351"
                            Height="45"
                            Margin="0, 4, 0, 0"
                            Style="{StaticResource TextBoxTemplate}"
                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </WrapPanel>
                    <WrapPanel 
                        Orientation="Vertical"
                        Margin="0, 0, 0, 24">
                        <Label 
                            Style="{StaticResource Subheader_16px}" 
                            Foreground="{StaticResource ForegroundColor}" 
                            Content="Password"/>
                        <components:BindablePasswordBox 
                            Width="351"
                            Height="45"
                            Margin="0, 4, 0, 0"
                            Password="{Binding Password}"/>
                    </WrapPanel>
                    <WrapPanel 
                        Orientation="Vertical"
                        Margin="0, 0, 0, 16">
                        <Label 
                            Style="{StaticResource Subheader_16px}" 
                            Foreground="{StaticResource ForegroundColor}" 
                            Content="Confirm password"/>
                        <components:BindablePasswordBox  
                            Width="351"
                            Height="45"
                            Margin="0, 4, 0, 0"
                            Password="{Binding ConfirmPassword}"/>
                    </WrapPanel>
                    <CheckBox
                        Style="{DynamicResource CheckBoxTemplate}">
                        <CheckBox.Tag>
                            <TextBlock
                                Style="{StaticResource Text_14px}">
                                <Run Text="I agree to the "></Run> 
                                <Hyperlink Foreground="{StaticResource InactiveColor}">Terms &amp; Conditions</Hyperlink>
                                <Run Text="and"/>
                                <Hyperlink Foreground="{StaticResource InactiveColor}">Privacy Policy.</Hyperlink>
                            </TextBlock>
                        </CheckBox.Tag>
                    </CheckBox>
                    <Button 
                        Margin="0, 40, 0, 0"
                        Width="351"
                        Height="45"
                        Style="{StaticResource ImagedButton}"
                        IsDefault="True"
                        Tag="{StaticResource CreateAccountIcon}"
                        Content ="Create Account"
                        Command="{Binding RegisterCommand}"/>
                </StackPanel>
                <!--#endregion-->
                
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
